@model TreeStructure.Entities.Tree

@{
    ViewData["Title"] = "DeleteTreeNode";
}

<h1>DeleteTreeNode</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Tree</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
             @Html.DropDownListFor(x => x.ParentId, (IEnumerable<SelectListItem>)ViewBag.Nodes,"Select Parent", new {@class = "form-control"})
        </dt>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ParentId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ParentId)
        </dd>
    </dl>
    
    <form asp-action="DeleteTreeNode">
        <input type="hidden" asp-for="TreeId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
